page{
    height: 100%;
}
.container{
    background-color: #fff;
    justify-content: initial;
}
.form-box{
    width:100%;
    background-color: #fff;
    margin-top: 20rpx;
}
.row-wrap{
    width: 720rpx;
    height: 88rpx;
    line-height: 88rpx;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
    /*justify-content: space-between;*/
}
.row-wrap .label{
    width: 160rpx;
    color: #000
}
.row-wrap .label-right{
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
}
.row-wrap .label-right input{
    height: 100%;
    font-size: 28rpx;
    padding-right: 30rpx;
}
.row-wrap .right-box{
    margin-right: 30rpx;
}
.arrow-right{
    width: 15rpx;
    height: 24rpx;
}
.save-btn,
.cancel-btn{
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top:30rpx;
    border-radius: 6rpx;
    box-sizing: border-box;
}
.save-btn{
    background-color: #e64340;
    color:#fff;
}
button[type="default"]{
    background-color: #ffffff;
    color:#000;
}
.addr-details{
    height: auto;
    padding: 30rpx 0;
    margin-left:30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
}
.addr-details .label{
    margin:auto 0 auto 0;
    width: 160rpx;
    color: #000
}
.addr-details textarea{
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
}
picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
}
.hui{
    color: #777;
}


.con {
	position:relative;
	display:block;
	margin-left:auto;
	margin-right:auto;
	margin-top:80rpx;
	padding-left:14px;
	padding-right:14px;
	box-sizing:border-box;
	font-size:17px;
	border-radius:5px;
	-webkit-tap-highlight-color:transparent;
	overflow:hidden;
	color:#000000;
	background-color: #3cc196;
    border-color: #3cc196;
    color: #FFF;
	border-radius: 45px;
}



.first{
	font-size: 12pt;
	margin-top: 100rpx;
	letter-spacing:3pt;
	margin-left: 50rpx;
	font-family:'CloudKaiXingGBK';
	line-height:22px;
	color: #5f5c5c;
}

.two{
	font-size: 12pt;
	margin-top: 30rpx;
	letter-spacing:3pt;
	margin-left: 50rpx;
	font-family:'CloudKaiXingGBK';
	line-height:22px;
	color: #5f5c5c;
}
